    <!-- Cable Used (in feet) -->
    <div class="col-12 mt-4">
        <label class="form-label fs-5" id="LabelText">Cable Used (feet):</label>
        <small class="text-muted d-block mb-2" id="LabelText">
            Enter start and end marks for each cable type (in feet). Leave blank if not used.
        </small>

        <div class="table-responsive">
            <table class="table table-sm table-bordered align-middle">
                <thead>
                    <tr>
                        <th id="LabelText">Cable Type</th>
                        <th id="LabelText">Start (ft)</th>
                        <th id="LabelText">End (ft)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td id="LabelText">Cat 6</td>
                        <td>
                            <span asp-validation-for="CableCat6.Cat6Start" class="text-danger"></span>
                            <input asp-for="CableCat6.Cat6Start" type="number" min="0" class="form-control form-control-sm" />
                        </td>
                        <td>
                            <span asp-validation-for="CableCat6.Cat6End" class="text-danger"></span>
                            <input asp-for="CableCat6.Cat6End" type="number" min="0" class="form-control form-control-sm" />
                        </td>
                    </tr>
                    <tr>
                        <td id="LabelText">18/2</td>
                        <td>
                            <span asp-validation-for="Cable182.Cable182Start" class="text-danger"></span>
