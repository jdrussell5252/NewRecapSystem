        <div class="card p-2 mt-2" data-seg>
            <div class="row g-2 align-items-end">
                <div class="col-12">
                    <label class="form-label">Travel Start:</label>
                    <div class="d-flex flex-column gap-2">
                        <input name="NewRecap.TravelSegments[__INDEX__].DriveStartDate" type="date" class="form-control" min="2025-01-01" max="2025-12-31" />
