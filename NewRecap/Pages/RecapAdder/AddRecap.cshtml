        <label class="form-label" id="LabelText">Support Segments:</label>
        <span asp-validation-for="NewRecap.SupportSegments" class="text-danger"></span>
        <div id="segmentsSupport" class="d-flex flex-column">
            @for (var i = 0; i < Model.NewRecap.SupportSegments.Count; i++)
