                                <input asp-for="NewRecap.TravelSegments[@i].DriveEnd" type="time" class="form-control" />
                                <span asp-validation-for="NewRecap.TravelSegments[@i].DriveEnd" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 text-end">
                            <button type="button" class="deleteBtn btn-danger" onclick="removeSegment(this)">Remove</button>
