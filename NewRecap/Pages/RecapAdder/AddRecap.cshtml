                            <input asp-for="Cable186.Cable186Start" type="number" min="0" class="form-control form-control-sm" />
                        </td>
                        <td>
                            <span asp-validation-for="Cable186.Cable186End" class="text-danger"></span>
                            <input asp-for="Cable186.Cable186End" type="number" min="0" class="form-control form-control-sm" />
                        </td>
                    </tr>
                    <tr>
                        <td id="LabelText">Fiber</td>
                        <td>
                            <span asp-validation-for="CableFiber.FiberStart" class="text-danger"></span>
                            <input asp-for="CableFiber.FiberStart" type="number" min="0" class="form-control form-control-sm" />
