@page
@model NewRecap.Pages.AdminPages.BrowseEmployeesModel
@{
}

<div class="row text-center">
    <div class="col-12">
        <label class="form-label fs-1" id="LabelText">Browse Employees</label>
    </div>
</div>

<!-- Error Message-->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

@if (Model.Employees.Count != 0)
{
    @foreach (var LocalEmployee in Model.Employees)
    {
        <div class="row my-3 p-4 bg-dark text-white border border-secondary rounded align-items-start">
            <!-- Delete -->
            <div class="col-auto text-center mb-3 mb-md-0">
                <form method="post" asp-page-handler="Delete">
                    <input type="hidden" name="id" value="@LocalEmployee.EmployeeID" />
                    <button onclick="return confirm('Are you sure?')" class="btn btn-danger">
                        <i class="bi bi-trash3"></i>
                    </button>
                </form>
            </div>

            <!-- 4 equal columns -->
            <div class="col">
                <div class="row text-center g-3">
                    <div class="col-12 col-md-3 border-end border-secondary">
                        <label class="form-label fw-bold d-block">Employee First Name:</label>
                        <div>@LocalEmployee.EmployeeFName</div>
                        <a asp-page="EditEmployeeFName" asp-route-id="@LocalEmployee.EmployeeID" class="btn btn-primary mt-2">
                            <i class="bi bi-pencil-square"></i> Edit First Name
                        </a>
                    </div>

                    <div class="col-12 col-md-3 border-end border-secondary">
                        <label class="form-label fw-bold d-block">Employee Last Name:</label>
                        <div>@(LocalEmployee.EmployeeLName)</div>
                        <a asp-page="EditEmployeeLName" asp-route-id="@LocalEmployee.EmployeeID" class="btn btn-primary mt-2">
                            <i class="bi bi-pencil-square"></i> Edit Last Name
                        </a>
                    </div>

                    <div class="col-12 col-md-3 border-end border-secondary">
                        <label class="form-label fw-bold d-block">Employee Username:</label>
                        <div>@(LocalEmployee.EmployeeUsername)</div>
                        <a asp-page="EditEmployeeUsername" asp-route-id="@LocalEmployee.EmployeeID" class="btn btn-primary mt-2">
                            <i class="bi bi-pencil-square"></i> Edit Username
                        </a>
                    </div>

                    <div class="col-12 col-md-3">
                        <label class="form-label fw-bold d-block">Employee User Role:</label>
                        <div>@LocalEmployee.EmployeeRole</div>
                        <a asp-page="EditEmployeeRole" asp-route-id="@LocalEmployee.EmployeeID" class="btn btn-primary mt-2">
                            <i class="bi bi-pencil-square"></i> Edit User Role
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <hr />

    }
}
else
{
    <div class="row my-2">
        <div class="col-12">
            <label class="form-label" id="LabelText">No employees yet.</label>
        </div>
    </div>
}