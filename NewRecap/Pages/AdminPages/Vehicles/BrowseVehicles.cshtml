@page
@model NewRecap.Pages.AdminPages.Vehicles.BrowseVehiclesModel
@{
}

<div class="row text-center">
    <div class="col-12">
        <label class="form-label fs-1" id="LabelText">Browse Vehicles</label>
    </div>
</div>

<!-- Error Message-->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
<div class="row my-2">
    <div class="col-2">
        <a asp-page="AddVehicle" class="btn btn-primary"><i class="bi bi-plus-square"></i> Add</a>
    </div>
</div>


@if (Model.Vehicles.Count != 0)
{
    @foreach (var LocalLocation in Model.Vehicles)
    {
        <div class="row my-3 p-4 bg-dark text-white border border-secondary rounded align-items-center text-center">
            <!--Delete Button-->
            <!--<div class="col-md-1">
                <form method="post" asp-page-handler="Delete">
                    <input type="hidden" name="id" value="@LocalLocation.VehicleID" />
                    <button onclick="return confirm('Are you sure?')" class="deleteBtn btn-danger">
                        <i class="bi bi-trash3"></i>
                    </button>
                </form>
            </div>-->
            <!--End of Delete Button-->

            <div class="col-md-3 border-end border-secondary">
                <!-- left column -->
                <label class="form-label fw-bold">Vehicle Number:</label>
                <div>@(LocalLocation.VehicleNumber)</div>
                <a asp-page="EditVehicleNumber" asp-route-id="@LocalLocation.VehicleID" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Edit Number</a>
            </div>

            <div class="col-md-4 border-end border-secondary">
                <!-- Middle column -->
                <label class="form-label fw-bold">Vehicle Model:</label>
                <div>@(LocalLocation.VehicleModel ?? "N/A")</div>
                <a asp-page="EditVehicleModel" asp-route-id="@LocalLocation.VehicleID" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Edit Model</a>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-bold">Vehicle Is Active:</label>
                <div>@(LocalLocation.IsActive ? "Active" : "Inactive")</div>

                <a asp-page="EditVehicleIsActive"
                   asp-route-id="@LocalLocation.VehicleID"
                   class="btn btn-primary btn-sm my-1">
                    <i class="bi bi-pencil-square"></i> Edit Status
                </a>
            </div>
        </div>
        <hr />
    }
    @if (Model.TotalCount > 0)
    {
        <div class="text-center my-4">
            <div class="nacspace-logo mb-3">
                <span class="nacspace-color">N</span>
                <span class="nacspace-color">a</span>
                <span class="nacspace-color">c</span>
                <span class="nacspace-color">S</span>
                <span class="nacspace-color">p</span>
                <span class="nacspace-color">a</span>
                <span class="nacspace-color">c</span>
                <span class="nacspace-color">e</span>
            </div>

            <div class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == Model.PageNumber)
                    {
                        <span class="page-number active">@i</span>
                    }
                    else
                    {
                        <a class="page-number"
                           asp-page="./BrowseVehicles"
                           asp-route-pageNumber="@i"
                           asp-route-pageSize="@Model.PageSize">@i</a>
                    }
                }
            </div>
        </div>
    }
}
else
{
    <div class="row my-2">
        <div class="col-12">
            <label class="form-label" id="LabelText">No Vehicles yet. Click 'Add' to add a new Vehicle.</label>
        </div>
    </div>
}