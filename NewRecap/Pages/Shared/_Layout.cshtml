<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewRecap</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewRecap.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <!-- Top Header -->
    <header class="bg-dark py-2 d-flex justify-content-between align-items-center px-3">
        <button class="btn btn-dark" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-controls="sidebar">
            <i class="bi bi-list"></i> <!-- Hamburger icon -->
        </button>

        <div class="logo text-center">
            <img src="~/Images/NacspaceImg.png" alt="Logo" style="max-height:100px;">
        </div>

        <div style="width: 40px;"><!-- Placeholder for alignment --></div>
    </header>

    <!-- Sidebar (Offcanvas) -->
    <div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="sidebar" aria-labelledby="sidebarLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="sidebarLabel">Menu</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            @if (!User.Identity.IsAuthenticated)
            {
                <a class="d-block py-2 text-white" asp-area="" asp-page="/Account/Login">Login</a>
            }

            @if (User.Identity.IsAuthenticated)
            {
                var isAdmin = ViewData["IsAdmin"] != null && (bool)ViewData["IsAdmin"];
                @if (isAdmin)
                {
                    <a class="d-block py-2 text-white" asp-area="" asp-page="/AdminPages/StoreLocations/BrowseStoreLocations">Locations</a>
                    <a class="d-block py-2 text-white" asp-area="" asp-page="/AdminPages/Employees/BrowseEmployees">Employees</a>
                    <a class="d-block py-2 text-white" asp-area="" asp-page="/AdminPages/Recaps/RecapWeeklyLog">Recap Report</a>
                }

                <a class="d-block py-2 text-white" asp-area="" asp-page="/AdminPages/Toolkits/BrowseToolKits">Toolkits</a>
                <a class="d-block py-2 text-white" asp-area="" asp-page="/AdminPages/Recaps/BrowseRecaps">Recaps</a>

                @if (isAdmin)
                {
                    <a class="d-block py-2 text-white" asp-area="" asp-page="/AdminPages/Vehicles/BrowseVehicles">Vehicles</a>
                }

                <a class="d-block py-2 text-white" asp-area="" asp-page="/Account/SignOut">Sign Out</a>
            }

            <a class="d-block py-2 text-white" asp-area="" asp-page="/Index">Home</a>
        </div>
    </div>

    <div class="container-fluid px-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="footer-section">
            <h1>Address</h1>
            <p>2400 Stallings Dr, Nacogdoches, TX 75965</p>
        </div>
        <div class="footer-section">
            <h1>Contact</h1>
            <p>Helpdesk: (936) 715-4010</p>
            <p>Frontdesk: (936) 715-4049</p>
        </div>
        <div class="footer-section">
            <h3>Connect</h3>
            <div class="social-icons">
                <a href="https://www.facebook.com/" target="_blank"><i class="fab fa-facebook"></i></a>
                <a href="https://www.instagram.com/" target="_blank"><i class="fab fa-instagram"></i></a>
                <a href="https://www.tiktok.com/" target="_blank"><i class="fab fa-tiktok"></i></a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>