@page
@model NewRecap.Pages.Account.RegisterModel
@{
}

<div class="container my-5 p-2">
    <div class="row justify-content-center">
        <div class="col-12">
            <label class="fs-1" id="LabelText">Register</label>
        </div>
    </div>
    <form method="post">
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <img src="~/Images/BlankAvatar.png" alt="Avatar" class="img-fluid" id="avatar-img">
            </div>

            <div class="col-4">
                <label asp-for="NewUser.FirstName" class="form-label" id="LabelText"></label>
            </div>
            <div class="col-12">
                <input asp-for="NewUser.FirstName" type="text" class="form-control" />
                <span asp-validation-for="NewUser.FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-4">
                <label asp-for="NewUser.LastName" class="form-label" id="LabelText">Last Name</label>
            </div>
            <div class="col-12">
                <input asp-for="NewUser.LastName" type="text" class="form-control" />
                <span asp-validation-for="NewUser.LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-4">
                <label asp-for="NewUser.UserName" class="form-label" id="LabelText">User Name</label>
            </div>
            <div class="col-12">
                <input asp-for="NewUser.UserName" type="text" class="form-control" />
                <span asp-validation-for="NewUser.UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-4">
                <label asp-for="NewUser.Email" class="form-label" id="LabelText"></label>
            </div>
            <div class="col-12">
                <input asp-for="NewUser.Email" type="email" class="form-control" />
                <span asp-validation-for="NewUser.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-4">
                <label asp-for="NewUser.Password" class="form-label" id="LabelText"></label>
            </div>
            <div class="col-12">
                @* Show password rule errors *@
                @if (Model.PasswordErrors != null && Model.PasswordErrors.Count > 0)
                {
                    <div class="text-danger mb-2">
                        <ul class="mb-0">
                            @foreach (var error in Model.PasswordErrors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>
                }
                <input asp-for="NewUser.Password" type="password" class="form-control" />
                <span asp-validation-for="NewUser.Password" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-4">
                <label asp-for="NewUser.ConfirmPassword" class="form-label" id="LabelText"></label>
            </div>
            <div class="col-12">
                <input asp-for="NewUser.ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="NewUser.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary w-100">Register</button>
            </div>
        </div>
    </form>
</div>